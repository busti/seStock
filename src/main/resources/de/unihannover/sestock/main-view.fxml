<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="de.unihannover.sestock.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <ComboBox fx:id="stockName" onKeyReleased="#onStockNameChange" editable="true" prefWidth="150.0" promptText="Kursnamen..." />

    <Label fx:id="welcomeText" />
    <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
            <Button onAction="#onPrintButtonClick" mnemonicParsing="false" text="Drucken" />
            <Button mnemonicParsing="false" text="Plotter" />
            <Button onAction="#onHelloButtonClick" text="Kurs" />
        </buttons>
    </ButtonBar>
</VBox>
